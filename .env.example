# Environment
NODE_ENV=development

# MinIO Configuration
MINIO_ENDPOINT=http://localhost:9000
MINIO_ADMIN_ACCESS_KEY=minioadmin
MINIO_ADMIN_SECRET_KEY=minioadmin
MINIO_ALIAS=myminio
AWS_REGION=us-east-1
SIGN_URL_EXPIRES=300

# API Ports
ADMIN_API_PORT=3001
FILE_API_PORT=3002
FRONTEND_PORT=3000

# Default Settings
DEFAULT_INITIAL_MEMBER=tsuji01

# SMTP Configuration (for invitations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
FROM_ADDR=MinIO Access <minio-noreply@tunagu.tech>

# Google OAuth Configuration
# Get these from https://console.developers.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Domain Restriction (Optional)
# Only allow users from specific domain to access the system
ALLOWED_EMAIL_DOMAIN=tunagu.tech

# Session & Security
SESSION_SECRET=change_me_to_random_string
INVITE_TTL_MINUTES=10

# Frontend URLs
NEXT_PUBLIC_ADMIN_API_BASE=http://localhost:3001/api
NEXT_PUBLIC_FILE_API_BASE=http://localhost:3002/api
NEXT_PUBLIC_FILES_BASE=http://localhost:3000
NEXT_PUBLIC_ADMIN_BASE=http://localhost:3000

# Production URLs (when deploying to VPS)
# NODE_ENV=production
# MINIO_ENDPOINT=https://minio.tunagu.app
# MINIO_ADMIN_ACCESS_KEY=admin
# MINIO_ADMIN_SECRET_KEY=adminpass
# NEXT_PUBLIC_ADMIN_API_BASE=https://admin.tunagu.app/api
# NEXT_PUBLIC_FILE_API_BASE=https://files.tunagu.app/api
# NEXT_PUBLIC_FILES_BASE=https://files.tunagu.app
# NEXT_PUBLIC_ADMIN_BASE=https://admin.tunagu.app

# SSL Configuration (production)
SSL_EMAIL=admin@tunagu.tech
DOMAIN_ADMIN=admin.tunagu.app
DOMAIN_FILES=files.tunagu.app